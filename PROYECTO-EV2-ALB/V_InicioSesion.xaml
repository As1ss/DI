<Window x:Class="PROYECTO_EV2_ALB.V_InicioSesion"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PROYECTO_EV2_ALB"
        mc:Ignorable="d"
        Title="Inicio de Sesión" Height="450" Width="800">
    <DockPanel>
        <StackPanel Width="800" Height="50" Background="DarkOliveGreen" DockPanel.Dock="Top">
            <TextBlock Text="Biblioteca SAMPLE" FontSize="30" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </StackPanel>
        <TextBlock Text="Inicio de Sesión" FontSize="30" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBox x:Name="txtUsuario" 
                 Text="Usuario" HorizontalAlignment="Center" VerticalAlignment="Center" Width="200" Height="30"/>

    </DockPanel>
</Window>
