            <Image.Effect>
                <DropShadowEffect/>
            </Image.Effect>
        </Image>
        <Button x:Name="btnJugar" FontSize="65" Canvas.Left="735" Width="250"
            Canvas.Top="203" FontFamily="Comic Sans MS" Click="btnJugar_Click">
            <Button.Effect>
                <DropShadowEffect/>
            </Button.Effect> JUGAR
        </Button>
        <Button x:Name="btnSalir" FontSize="65" Canvas.Left="735" 
            Canvas.Top="360" HorizontalAlignment="Left"
            VerticalAlignment="Top" Width="250" FontFamily="Comic Sans MS" Click="btnSalir_Click">
            <Button.Effect>
                <DropShadowEffect/>
            </Button.Effect> SALIR
        </Button>

